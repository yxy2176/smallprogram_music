/* components/ranking-item/ranking-item.wxss */
.ranking-item{
  display:flex;
  justify-content: space-between;
  overflow: hidden;
  background-color: #eee;
  border-radius: 12rpx;
  margin-top:20rpx;
}

.content{
  overflow: hidden;
  padding:24rpx;
}

.content .name{
  font-size:34rpx;
  font-weight: 700;
}

.content .list{
  font-size:24rpx;
  margin-top:10rpx;
}

.content .list .item{
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  margin-top:6rpx;
  color:#333;
}

.content .list .item .artist{
   columns: #999;
}

.album{
  position: relative;
  display: flex;
}

.album .image{
  width: 220rpx;
  height: 220rpx;
  background-size: cover;
}

.album .count{
  position: absolute;
  right:0;
  bottom: 0;
  color:#fff;
  font-size:22rpx;
  padding:6rpx 10rpx;
  border-radius: 12rpx;
  background: rgba(0,0,0,.5);
}